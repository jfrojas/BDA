<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
     <class name="ubticket.Categoria" table="CATEGORIA">
        <id name="id_categoria" column="ID_CATEGORIA">
            <generator class="identity" />
        </id>
        <property name="nom" column="NOM" />        
        
         
        <!-- 1-N    Categoria-Espectacle -->
         <many-to-one class="ubticket.Espectacle" fetch="select" name="espectacle">
           <column name="ID_ESPECTACLE" /> <!-- CAMP FK de la taula articulo IDENTICS A LES DUES ENTITATS --> 
        </many-to-one>
        
    </class>
</hibernate-mapping>