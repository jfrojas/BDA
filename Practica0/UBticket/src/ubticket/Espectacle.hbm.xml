<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
     
      <class name="ubticket" table="Espectacle">
        <id name="id_espectacle" column="ID_ESPECTACLE">
            <!--<generator class="identity" />-->
            <generator class="native" />
        </id>
        <property name="titol" column="TITOL" />
        <property name="descripcio" column="DESCRIPCIO" />
        
        <!-- N - 1 con Categoria -->
        <set cascade="all" lazy="true" name="categories" table="categoria">
           <key>
               <column name="ID_ESPECTACLE" /> <!-- CAMP FK de la taula articulo -->
           </key>
            <one-to-many class="ubticket.Categoria" /> 
       </set>
       
       <!-- 1-1 de Espectacle- Espai-->
       <one-to-one name="espai"/>
       
       
       <!--
       <set name="tiendas" table="TIENDA_CATALOGO" cascade="all">
                       <key column="IDCATALOGO" />
                       <many-to-many column="IDTIENDA" class="com.ub.edu.bda.Tienda" />
       </set> -->  
       
     </class>
  

</hibernate-mapping>
